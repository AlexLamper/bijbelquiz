{
  "name": "bijbelquiz-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:all": "turbo dev --parallel",
    "dev:web:host": "npm run dev --workspace=@bijbelquiz/web -- -H 192.168.68.107",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "^3.0.0"
  },
  "packageManager": "npm@10.2.4"
}
